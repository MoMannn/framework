{
  "name": "@specron/spec",
  "version": "0.17.0",
  "description": "Test suits for Specron framework.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npx tsc",
    "test": "npx nyc npx ava --verbose"
  },
  "ava": {
    "concurrency": 1,
    "require": [
      "ts-node/register"
    ],
    "extensions": [
      "ts"
    ],
    "files": [
      "src/tests/*.test.ts",
      "src/tests/**/*.test.ts"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "exclude": [
      "src/tests"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@0xcert/ethereum-utils-contracts": "2.0.1",
    "@types/node": "13.13.4",
    "ava": "3.8.1",
    "nyc": "15.0.1",
    "ts-node": "8.10.1",
    "typescript": "3.8.3",
    "web3": "1.2.7"
  },
  "peerDependencies": {
    "web3": "*"
  },
  "dependencies": {
    "@hayspec/reporter": "0.10.0",
    "@hayspec/runner": "0.10.0",
    "@hayspec/spec": "0.10.0",
    "@specron/sandbox": "0.17.0"
  }
}
