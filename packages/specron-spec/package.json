{
  "name": "@specron/spec",
  "version": "0.3.1",
  "description": "Test suits for Specron framework.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npx tsc",
    "test": "npx nyc npx ava --verbose"
  },
  "ava": {
    "concurrency": 1,
    "compileEnhancements": false,
    "require": [
      "ts-node/register"
    ],
    "extensions": [
      "ts"
    ],
    "files": [
      "src/tests/*.test.ts",
      "src/tests/**/*.test.ts"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "exclude": [
      "src/tests"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@0xcert/ethereum-utils": "1.1.0",
    "@types/node": "^10.12.12",
    "ava": "^1.0.0-rc.2",
    "nyc": "^13.1.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.1",
    "web3": "^1.0.0-beta.36"
  },
  "peerDependencies": {
    "web3": "*"
  },
  "dependencies": {
    "@hayspec/reporter": "^0.8.0",
    "@hayspec/runner": "^0.8.0",
    "@hayspec/spec": "^0.8.0",
    "@specron/sandbox": "^0.3.1"
  }
}
