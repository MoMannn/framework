{
  "name": "@specron/spec",
  "version": "0.8.2",
  "description": "Test suits for Specron framework.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npx tsc",
    "test": "npx nyc npx ava --verbose"
  },
  "ava": {
    "concurrency": 1,
    "compileEnhancements": false,
    "require": [
      "ts-node/register"
    ],
    "extensions": [
      "ts"
    ],
    "files": [
      "src/tests/*.test.ts",
      "src/tests/**/*.test.ts"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "exclude": [
      "src/tests"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@0xcert/ethereum-utils": "1.1.0",
    "@types/node": "12.7.8",
    "ava": "2.4.0",
    "nyc": "14.1.1",
    "ts-node": "8.4.1",
    "typescript": "3.6.3",
    "web3": "1.2.1"
  },
  "peerDependencies": {
    "web3": "*"
  },
  "dependencies": {
    "@hayspec/reporter": "0.9.0",
    "@hayspec/runner": "0.9.0",
    "@hayspec/spec": "0.9.0",
    "@specron/sandbox": "0.8.2"
  }
}
