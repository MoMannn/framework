{
  "name": "@specron/compiler",
  "version": "0.15.1",
  "description": "Solidity contract compiler for Specron framework.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npx tsc",
    "test": "npx nyc npx ava --verbose"
  },
  "ava": {
    "concurrency": 1,
    "compileEnhancements": false,
    "require": [
      "ts-node/register"
    ],
    "extensions": [
      "ts"
    ],
    "files": [
      "src/tests/*.test.ts",
      "src/tests/**/*.test.ts"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "exclude": [
      "src/tests"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@0xcert/ethereum-utils-contracts": "2.0.0-alpha15",
    "@types/fs-extra": "8.0.0",
    "@types/node": "12.7.8",
    "ava": "2.4.0",
    "nyc": "14.1.1",
    "solc": "0.6.1",
    "ts-node": "8.4.1",
    "typescript": "3.6.3"
  },
  "dependencies": {
    "@specron/flattener": "0.15.1",
    "@hayspec/reporter": "0.9.0",
    "fast-glob": "3.0.4",
    "fs-extra": "8.1.0"
  },
  "peerDependencies": {
    "solc": "*"
  }
}
