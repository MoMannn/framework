{
  "name": "@specron/cli",
  "version": "0.1.2",
  "description": "Command-line tool for Specron framework.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "specron": "./bin/specron"
  },
  "scripts": {
    "clean": "rm -Rf ./dist; rm -Rf ./build",
    "transpile": "npm run clean; tsc",
    "prepare": "npm run transpile",
    "test": "npm run transpile && nyc ava"
  },
  "ava": {
    "compileEnhancements": false,
    "files": [
      "dist/tests/*.test.js",
      "dist/tests/**/*.test.js"
    ]
  },
  "nyc": {
    "exclude": [
      "src/tests"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@types/inquirer": "^0.0.41",
    "@types/node": "^10.3.2",
    "@types/yargs": "^11.0.0",
    "ava": "^0.25.0",
    "nyc": "^12.0.2",
    "ts-node": "^7.0.1",
    "solc": "0.4.24",
    "typescript": "^3.0.1",
    "web3": "^1.0.0-beta.36"
  },
  "dependencies": {
    "@hayspec/reporter": "^0.5.0",
    "@specron/compiler": "^0.1.2",
    "@specron/init": "^0.1.2",
    "@specron/sandbox": "^0.1.2",
    "@specron/spec": "^0.1.2",
    "inquirer": "^6.1.0",
    "yargs": "^12.0.1"
  },
  "peerDependencies": {
    "solc": "^0.4.24",
    "web3": "*"
  }
}
