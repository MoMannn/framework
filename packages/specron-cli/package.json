{
  "name": "@specron/cli",
  "version": "0.2.5",
  "description": "Command-line tool for Specron framework.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "specron": "./bin/specron"
  },
  "scripts": {
    "clean": "rm -Rf ./dist; rm -Rf ./build",
    "transpile": "npm run clean; tsc",
    "prepare": "npm run transpile",
    "test": "npm run transpile && nyc ava --verbose"
  },
  "specron": {
    "compiler": {
      "build": "./build",
      "match": [
        "./src/**/*.sol"
      ],
      "severities": [
        "error",
        "warning"
      ]
    },
    "sandbox": {
      "port": 8545,
      "host": "localhost"
    },
    "test": {
      "server": true,
      "port": 8545,
      "host": "localhost",
      "match": [
        "./src/**/*.hay.*"
      ]
    },
    "require": [
      "ts-node/register"
    ]
  },
  "ava": {
    "concurrency": 1,
    "compileEnhancements": false,
    "files": [
      "dist/tests/*.test.js",
      "dist/tests/**/*.test.js"
    ]
  },
  "nyc": {
    "exclude": [
      "src/tests"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@types/inquirer": "0.0.43",
    "@types/node": "^10.11.4",
    "@types/yargs": "^12.0.1",
    "ava": "^1.0.0-beta.8",
    "nyc": "^13.0.1",
    "solc": "^0.4.25",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.1",
    "web3": "^1.0.0-beta.36"
  },
  "dependencies": {
    "@hayspec/reporter": "^0.7.4",
    "@specron/compiler": "^0.2.5",
    "@specron/init": "^0.2.5",
    "@specron/sandbox": "^0.2.5",
    "@specron/spec": "^0.2.5",
    "inquirer": "^6.2.0",
    "yargs": "^12.0.2"
  },
  "peerDependencies": {
    "solc": "^0.4.24",
    "web3": "*"
  }
}
