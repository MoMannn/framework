{
  "name": "@specron/cli",
  "version": "0.5.1",
  "description": "Command-line tool for Specron framework.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "specron": "./bin/specron"
  },
  "scripts": {
    "build": "npx tsc",
    "test": "npx nyc npx ava --verbose"
  },
  "specron": {
    "compiler": {
      "build": "./build",
      "match": [
        "./src/**/*.sol"
      ],
      "severities": [
        "error",
        "warning"
      ]
    },
    "sandbox": {
      "port": 8545
    },
    "test": {
      "server": true,
      "port": 8545,
      "match": [
        "./src/**/*.hay.*"
      ],
      "blockTime": null
    },
    "require": [
      "ts-node/register"
    ]
  },
  "ava": {
    "concurrency": 1,
    "compileEnhancements": false,
    "files": [
      "dist/tests/*.test.js",
      "dist/tests/**/*.test.js"
    ]
  },
  "nyc": {
    "exclude": [
      "src/tests"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@types/inquirer": "0.0.43",
    "@types/node": "^10.12.12",
    "@types/yargs": "^12.0.1",
    "ava": "^1.0.0-rc.2",
    "nyc": "^13.1.0",
    "solc": "^0.5.1",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.1",
    "web3": "1.0.0-beta.36"
  },
  "dependencies": {
    "@hayspec/reporter": "^0.8.3",
    "@specron/compiler": "^0.5.1",
    "@specron/init": "^0.5.1",
    "@specron/sandbox": "^0.5.1",
    "@specron/spec": "^0.5.1",
    "inquirer": "^6.2.1",
    "yargs": "^12.0.5"
  },
  "peerDependencies": {
    "solc": "*",
    "web3": "*"
  }
}
