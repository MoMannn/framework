{
  "name": "@specron/flattener",
  "version": "0.7.0",
  "description": "Solidity files flattener for Specron framework.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npx tsc",
    "test": "npx nyc npx ava --verbose"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "files": [
      "src/tests/*.test.ts",
      "src/tests/**/*.test.ts"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "exclude": [
      "src/tests"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@0xcert/ethereum-utils-contracts": "0.0.0-alpha",
    "@types/fs-extra": "8.0.0",
    "@types/node": "12.7.8",
    "ava": "2.4.0",
    "nyc": "14.1.1",
    "ts-node": "8.4.1",
    "typescript": "3.6.3"
  },
  "dependencies": {
    "@hayspec/reporter": "0.9.0",
    "deasync": "0.1.15",
    "fast-glob": "3.0.4",
    "sol-merger": "0.1.3"
  }
}
